{
	"description": "Provides a subset of the Haxe standard library as a reusable package.",
	"homepage": "https://docs.belin.io/haxe.php",
	"license": "MIT",
	"name": "cedx/haxe",
	"type": "library",
	"version": "1.1.0",
	"authors": [
		{"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
	],
	"autoload": {
		"psr-4": {"": "src/"}
	},
	"config": {
		"optimize-autoloader": true
	},
	"keywords": [
		"haxe",
		"php",
		"standard-library"
	],
	"require": {
		"php": ">=7.4.0",
		"ext-mbstring": "*",
		"ext-json": "*",
		"ext-pcre": "*",
		"ext-reflection": "*",
		"ext-sockets": "*",
		"ext-spl": "*"
	},
  "scripts": {
		"build": "pwsh tool/build.ps1",
		"clean": "pwsh tool/clean.ps1",
		"doc": "pwsh tool/doc.ps1",
		"post-update-cmd": ["haxelib install all --always", "haxelib update --always"],
		"publish": ["@build", "@clean", "@version", "pwsh tool/publish.ps1"],
		"version": "pwsh tool/version.ps1"
  },
	"support": {
		"docs": "https://api.belin.io/haxe.php",
		"issues": "https://git.belin.io/cedx/haxe.php/issues"
	}
}
